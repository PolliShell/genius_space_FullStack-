<h2>Todos page</h2>

<% if (todos.length) { %>
<ul>
  <% todos.forEach(todo => { %>
  <li class="todo">
    <form action="/complete" method="POST">
      <label>
        <% if (todo.completed) { %>
        <input type="checkbox" checked name="completed">
        <span class="completed"><%= todo.title %></span>
        <% } else { %>
        <input type="checkbox" name="completed">
        <span><%= todo.title %></span>
        <% } %>

        <input type="hidden" value="<%= todo._id %>" name="id">

        <button class="btn btn-small" type="submit">Save</button>
      </label>
    </form>
  </li>
  <% }); %>
</ul>
<% } else { %>
<p>No todos!</p>
<% } %>
